package operadores.aritmeticos;

import java.util.Scanner;

public class OperadoresAritmeticos {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        int num1;
        int num2;
        int num3;
        int num4;
        int soma, subtracao;
        float num5;
        float num6;
        float num7;
        float num8;
        float multiplicacao, divisao;

        System.out.println("Informe o valor para o num1: ");
        num1 = sc.nextInt();

        System.out.println("Informe o valor para o num2: ");
        num2 = sc.nextInt();
        
        soma = num1 + num2;
        
        System.out.println("A soma de " + num1 + "+" + num2 + "=" + soma);
        
        System.out.println("Informe o valor para o num3: ");
        num3 = sc.nextInt();

        System.out.println("Informe o valor para o num4: ");
        num4 = sc.nextInt();
        
        subtracao = num3 - num4;
        
        System.out.println("A subtracao de " + num3 + "-" + num4 + "=" + subtracao);
        
        System.out.println("Informe o valor do num5: ");
        num5 = sc.nextFloat();
        
        System.out.println("Informe o valor do num6: ");
        num6 = sc.nextFloat();
        
        multiplicacao = num5 * num6;
        
        System.out.println("A multiplicacao de " + num5 + "*" + num6 + "=" + multiplicacao);
        
        System.out.println("Informe o valor do num7: ");
        num7 = sc.nextFloat();
        
        System.out.println("Informe o valor do num8: ");
        num8 = sc.nextFloat();
        
        divisao = num7 / num8;
        
        System.out.println("A divisao de " + num7 + "/" + num8 + "=" + divisao);
        
        sc.close();

    }

}
